@model IEnumerable<WebSurvey_Sales_CRM.Models.RolesUser>
@{
    Layout = "_Layout";
}


<div class="container bg-light">
    <div class="row">
        <div class="col-6">
            <h2>Quyền truy cập</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NameRolesUser</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.NameRolesUser</td>

                                <td>

                                    <a class="nav-link text-dark" href="/admin/newoption/delete/@item.Id">Xóa</a>
                                </td>



                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2">Không có quyền truy cập nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-6">
            <h2>Thêm quyền truy cập</h2>
            <hr />
            <form asp-controller="NewOption" asp-action="Index" method="post">
                

                <div class="form-group">
                    <input type="text" name="NameRolesUser" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>

        </div>
    </div>
    
</div>

