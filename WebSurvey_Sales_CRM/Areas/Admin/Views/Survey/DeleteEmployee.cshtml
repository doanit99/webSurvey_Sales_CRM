@model IEnumerable<WebSurvey_Sales_CRM.Models.Employee>


@{
    Layout = "_Layout";
}

<section class="text-center mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Bạn có chắc bạn muốn xóa mục này?</h3>
        </div>
        <div class="card-body">
            @foreach (var user in Model)
            {
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => user.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => user.Name)
                    </dd>
                </dl>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a href="/admin/survey" class="btn btn-secondary">Quay lại</a>
                </div>
            }
        </div>
    </div>
</section>
