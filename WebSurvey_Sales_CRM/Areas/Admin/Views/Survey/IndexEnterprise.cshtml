@model IEnumerable<WebSurvey_Sales_CRM.Models.Enterprise>

@{
    ViewData["Title"] = "Survey";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>
<h2>Enterprise</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>TaxCode</th>
            <th>Represent</th>
            <th>Position</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>SourceCode</th>
            <th>TeamCode</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.TaxCode</td>
                    <td>@item.Represent</td>
                    <td>@item.Position</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.SourceCode</td>
                    <td>@item.TeamCode</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No data available</td>
            </tr>
        }
    </tbody>
</table>

