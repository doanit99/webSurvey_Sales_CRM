@model IEnumerable<WebSurvey_Sales_CRM.Models.Enterprise>


@{
    Layout = "_Layout";
}

<section class="text-center mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-header bg-success text-white">
            <h3 class="card-title">Bạn có chắc bạn muốn duyệt mục này?</h3>
        </div>
        <div class="card-body">
            @foreach (var enterprise in Model)
            {
                <dl class="dl-horizontal">
                    <dt>
                        Tên doanh nghiệp
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => enterprise.Name)
                    </dd>
                </dl>
            

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Duyệt" class="btn btn-success" />
                        <a href="/admin/survey/detailEnterprise/@enterprise.Id" class="btn btn-secondary">Quay lại</a>
                </div>
            }
            }
            
        </div>
    </div>
</section>
