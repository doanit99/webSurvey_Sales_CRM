@model dynamic

@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">


<div class="card bg-light">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-success">
                    Chi tiết khảo sát nhân viên
                </strong>
            </div>
            <div class="col-md-6 text-end">
                <a class="btn btn-sm btn-success p-2" href="/admin/survey/DeleteEmployee">Duyệt</a>
                <a class="btn btn-sm btn-danger p-2" href="/admin/survey/DeleteEmployee">Xóa</a>
                <a class="btn btn-sm btn-secondary p-2" href="/admin/survey">Quay lại</a>

            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped p-2">
            <tbody>
           
                @foreach (var item in Model.EmployeeModel)
                {
                <tr>
                    <th scope="row">ID</th>
                    <td>@item.Id</td>
                </tr>
                <tr>
                    <th scope="row">Họ tên</th>
                    <td>@item.Name</td>
                </tr>
                <tr>
                    <th scope="row">Số điện thoại</th>
                    <td>@item.Phone</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>@item.Email</td>
                </tr> 
                <tr>
                    <th scope="row">Địa chỉ</th>
                    <td>@item.Address</td>
                </tr>
                <tr>
                    <th scope="row">Tên nguồn</th>
                    @foreach (var source in Model.SourceModel)
                    {
                            if (@item.SourceCode == @source.SourceCode)
                            {
                                <td>@source.Name</td>
                            }
                            else
                            {
                                <td>Tên nguồn không tồn tại</td>
                            }
                     }
                </tr> 
                <tr>
                    <th scope="row">Tên nhóm</th>
                        @foreach (var source in Model.TeamModel)
                        {
                            if (@item.TeamCode == @source.TeamCode)
                            {
                                <td>@source.Name</td>
                            }
                            else
                            {
                                <td>Tên nhóm không tồn tại</td>
                            }
                        }
                </tr>
                <tr>
                    <th scope="row">Ngày tạo</th>
                    <td>@item.CreatedAt</td>
                </tr>
                <tr>
                    <th scope="row">Trạng thái</th>
                    @if (@item.Status == 1)
                    {
                       <td>Chưa duyệt</td>
                    }
                    else
                    {
                       <td>Đã duyệt</td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>