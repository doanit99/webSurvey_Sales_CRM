@model IEnumerable<WebSurvey_Sales_CRM.Models.User>

@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<div class="container bg-Light">
    <h2>Thông tin tài khoản</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên đại diện</th>
                <th>Tên tài khoản</th>
                <th>Loại tài khoản</th>
                <th>Quyền</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.DisplayName</td>
                        <td>@item.UserName</td>
                        <td>@item.TypeUser</td>
                        
                        @if (@item.Roles == 2)
                        {
                            <td>User</td>
                        }
                        else
                        {
                            <td>Admin</td>
                        }
                        <td>
                            <a class="nav-link text-dark delete-link" href="/admin/user/permissions/@item.Id">Cấp quyền</a> |
                            <a class="nav-link text-dark delete-link" href="/admin/user/deleteuser/@item.Id">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">Không có tài khoản nào</td>
                </tr>
            }
        </tbody>
    </table>
</div>