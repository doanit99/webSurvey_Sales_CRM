@model IEnumerable<WebSurvey_Sales_CRM.Models.User>

@{
    Layout = "_Layout";
}

<section class="text-center mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Bạn có chắc bạn muốn cấp quyền cho tài khoản này?</h3>
        </div>
        <div class="card-body">
            <form asp-action="Permissions" method="post">
                <div class="form-group">
                    <select name="Roles" class="form-control" required>
                        <option value="2">User</option>
                        <option value="1">Admin</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Cấp quyền</button>
                <a href="/admin/user" class="btn btn-secondary">Quay lại</a>
            </form>
            
        </div>
    </div>
</section>
