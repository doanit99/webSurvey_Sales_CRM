@model WebSurvey_Sales_CRM.Models.User
@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<link href="~/css/site.css" rel="stylesheet" />

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-3 py-md-5 h-md-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5 mx-auto">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-3 p-md-5 text-center">

                        <h3 class="mb-3">SALES CRM</h3>
                    
                        <form asp-action="Login" method="post">
                            <div class="form-outline mb-3">
                                <input asp-for="UserName" class="form-control form-control-lg" placeholder="Tên đăng nhập" />
                            </div>
                            <div class="form-outline mb-3">
                                <div class="position-relative">
                                    <input asp-for="Password" id="password" class="form-control form-control-lg"
                                           placeholder="Mật khẩu" type="password" />
                                    <div class="eye-toggle" onclick="togglePasswordVisibility('password')">
                                        👁️
                                    </div>
                                    
                                </div>
                            </div>
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="text-danger">
                                    <p>@TempData["ErrorMessage"]</p>
                                </div>
                            }

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
                        </form>

                        <div class="text-center">
                            <p>
                                Not a member? <a asp-controller="Account" asp-action="Register"> Đăng kí</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function togglePasswordVisibility(fieldId) {
        var field = document.getElementById(fieldId);
        if (field.type === "password") {
            field.type = "text";
        } else {
            field.type = "password";
        }
    }
</script>