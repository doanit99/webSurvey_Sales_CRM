@model WebSurvey_Sales_CRM.Models.User
@{
    Layout = null;
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<link href="~/css/site.css" rel="stylesheet" />

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">SALES CRM</h3>

                        <form asp-action="Register" method="post">
                            <div class="form-outline mb-4">
                                <input asp-for="DisplayName" class="form-control form-control-lg" placeholder="Tên hiển thị" />
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input asp-for="UserName" class="form-control form-control-lg" placeholder="Tên đăng nhập" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">                        
                                <div class="position-relative">
                                    <input asp-for="Password" id="password" class="form-control form-control-lg"
                                           placeholder="Mật khẩu" type="password"/>
                                    <div class="eye-toggle" onclick="togglePasswordVisibility('password')">
                                        👁️
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <div class="row">
                                    <div class="col-6">
                                        <input class="form-check-input" type="radio" name="TypeUser" value="Doanh nghiệp" />
                                        <label class="form-check-label">Doanh nghiệp</label>
                                    </div>
                                    <div class="col-6">
                                        <input class="form-check-input" type="radio" name="TypeUser" value="Nhân viên" checked />
                                        <label class="form-check-label">Nhân viên</label>
                                    </div>                               
                                </div>
                            </div>

                            <input type="hidden" name="Roles" value="2" />
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Đăng kí</button>

                            
                        </form>

                        <div class="text-center">
                            <p>
                                Have already an account? <a asp-controller="Account" asp-action="Login"> Đăng nhập</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function togglePasswordVisibility(fieldId) {
        var field = document.getElementById(fieldId);
        if (field.type === "password") {
            field.type = "text";
        } else {
            field.type = "password";
        }
    }
</script>