@model IEnumerable<WebSurvey_Sales_CRM.Models.Employee>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Store Information Employee</title>
</head>
<body>
    <h1>Store Information Employee</h1>

    @if (ViewBag.ErrorMessage != null)
    {
        <p style="color: red;">@ViewBag.ErrorMessage</p>
    }

    <form asp-action="StoreInformationEmployee" method="post">
        <label for="Name">Name:</label>
        <input type="text" name="Name" required>

        <label for="Phone">Phone:</label>
        <input type="text" name="Phone" required>

        <label for="Email">Email:</label>
        <input type="text" name="Email" required>

        <label for="Address">Address:</label>
        <input type="text" name="Address" required>

        <label for="SourceCode">SourceCode:</label>
        <input type="text" name="SourceCode" required>

        <label for="TeamCode">TeamCode:</label>
        <input type="text" name="TeamCode" required>

        @if (HttpContextAccessor.HttpContext?.Session.GetInt32("idUser") != null)
        {
            <input type="hidden" name="UserId" value="@HttpContextAccessor.HttpContext?.Session.GetInt32("idUser")">
        }
        else
        {
            <script>
                window.location.href = '/Account/Login';
            </script>
        }
        
        <button type="submit">Submit</button>
    </form>
</body>
</html>

